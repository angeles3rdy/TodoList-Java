<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnAddToDoUpd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_alignParentEnd="true"
        android:background="@null"/>

    <EditText
        android:id="@+id/tbAddTitleUpd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="30pt"
        android:hint="Title" />

    <EditText
        android:id="@+id/tbDateLabelUpd"
        android:layout_width="match_parent"
        android:layout_below="@id/tbAddTitleUpd"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/datelabelbg"
        android:enabled="false"
        android:fontFamily="sans-serif-medium"
        android:hint="@string/select_date"
        android:padding="8dp"
        android:textColor="#262626"
        android:textColorHint="@color/black"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/btnSelectDateUpd"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/baseline_calendar_month_24"
        android:layout_alignEnd="@id/tbDateLabelUpd"
        android:layout_marginTop="58pt"
        android:background="@null"/>

    <EditText
        android:id="@+id/tbTimeLabelUpd"
        android:layout_width="match_parent"
        android:layout_below="@id/tbDateLabelUpd"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/datelabelbg"
        android:enabled="false"
        android:fontFamily="sans-serif-medium"
        android:hint="@string/time"
        android:padding="8dp"
        android:textColor="#262626"
        android:textColorHint="@color/black"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/btnSelectTimeUpd"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@id/tbTimeLabelUpd"
        android:layout_marginStart="314dp"
        android:layout_marginTop="95pt"
        android:layout_marginEnd="11dp"
        android:background="@drawable/baseline_access_time_24" />

    <ScrollView
        android:layout_below="@id/tbTimeLabelUpd"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="8dp"
            android:id="@+id/todo_list_containerUpd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:padding="16dp"
                android:id="@+id/todo_inputUpd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="What do you need to do?"
                android:background="@drawable/datelabelbg"
                android:singleLine="true" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>